<CustomAccordion data-test-root-subject @defaultOpen="true">
  <:toolbar>
    <span class="au-u-flex--vertical-center au-u-flex">
      <p class="au-u-margin-tiny au-u-margin-left-none au-u-margin-bottom-none">
        {{@subject.className}}
      </p>
      <StatusPill @subject={{@subject}} />
      {{!-- <AuPill
        @class={{this.classNames}}
        @skin={{this.skin}}
      >{{this.pillMessage}}</AuPill> --}}
    </span>
    <span class="au-u-para-tiny au-u-flex au-u-margin-top-tiny">
      <p class="au-u-margin-tiny au-u-margin-left-none au-u-word-nowrap">
        Gevonden URI:
      </p>
      <CopyToClipboard @value={{@subject.uri}} />
    </span>
  </:toolbar>
  <:counts>{{this.displayCounts}}</:counts>
  <:content>
    {{#if this.loading}}
      <AuLoader data-test-accordion-loader />
    {{else}}
      {{#each @subject.properties as |property|}}
        <SubjectProperty @property={{property}} />
      {{/each}}
    {{/if}}
  </:content>
</CustomAccordion>